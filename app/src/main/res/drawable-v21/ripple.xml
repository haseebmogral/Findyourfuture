<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#000" />
            <stroke
                android:width="1dp"
                android:color="#000" />

            <corners android:radius="0.75dp" />


            <corners
                android:bottomLeftRadius="0.75dp"
                android:bottomRightRadius="0.75dp"
                android:topLeftRadius="0.75dp"
                android:topRightRadius="0.75dp" />


        </shape>
    </item>


</ripple>